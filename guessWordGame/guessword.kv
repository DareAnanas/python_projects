<GuessWordMenu>:
    BoxLayout:
        orientation: 'vertical'
        padding: [200, 100]
        spacing: 30
        Label:
            text: "Welcome to Guess Word Game"
            font_size: 40
        Button:
            text: "Play"
            font_size: 40
            on_press: root.manager.current = 'game'
        Button:
            text: 'Quit'
            font_size: 40
            on_press: app.stop()

<GuessWordGame>:
    input: input
    hintLabel: hintLabel
    attemptsLabel: attemptsLabel
    guessButton: guessButton
    backToMenuButton: backToMenuButton
    BoxLayout:
        orientation: 'vertical'
        padding: [200, 100]
        spacing: 30
        Label:
            id: attemptsLabel
            text: f"You have {root.attempts} attempts left"
        Label:
            id: hintLabel
            text: 'Guess a word'
            font_size: 30
        TextInput:
            id: input
            text: 'Enter a word'
            font_size: 25
            multiline: False
        Button:
            id: guessButton
            text: 'Guess'
        Button:
            id: backToMenuButton
            text: 'Back to menu'

<GameResultPopup>:
    size_hint: 0.5, 0.5
    auto_dismiss: False
    title_size: 27
    title_align: 'center'
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 50]
        Button:
            text: 'Restart'
            on_release: root.dismiss()