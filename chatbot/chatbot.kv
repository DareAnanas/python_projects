<ListItem>:
    size_hint_y: None
    height: 40
    canvas.before:
        Color:
            rgba: (0.5, 0.5, 0.5, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<ListBox>:
    layout: layout
    size_hint: (1, None)
    height: 200
    BoxLayout:
        id: layout
        orientation: 'vertical'
        size_hint_y: None
        

<ChatBot>:
    listBox: listBox
    BoxLayout:
        orientation: 'vertical'
        padding: (10, 5)
        spacing: 10
        ListBox:
            id: listBox

