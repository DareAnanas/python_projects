<ListItem>:
    size_hint_y: None
    height: 40
    text_size: self.size
    halign: 'left'
    valign: 'center'
    highlight_text_color: [1, 1, 0, 1]
    font_name: 'seguiemj'
    color: 'black'
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

<ListBox>:
    layout: layout
    size_hint: (1, None)
    height: 400
    BoxLayout:
        id: layout
        orientation: 'vertical'
        size_hint_y: None

<EmojiOption>:
    background_color: app.theme['button_color']
    background_normal: app.theme['button_normal']

<ChatBot>:
    listBox: listBox
    messageInput: messageInput
    findInput: findInput
    matchCaseCheckBox: matchCaseCheckBox
    canvas.before:
        Color:
            rgba: app.theme['bg_color']
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: (10, 5)
        spacing: 10
        ListBox:
            id: listBox
        BoxLayout:
            orientation: 'horizontal'
            padding: (5, 5)
            spacing: 10
            TextInput:
                id: messageInput
                font_name: "seguiemj"
                size_hint_x: 0.8
            Button:
                size_hint_x: 0.2
                color: app.theme['text_color']
                background_color: app.theme['button_color']
                background_normal: app.theme['button_normal']
                text: 'Send'
                on_release: root.sendMessage()
        BoxLayout:
            orientation: 'horizontal'
            padding: (5, 5)
            spacing: 10
            EmojiSpinner:
                size_hint_x: 0.7
                color: app.theme['text_color']
                background_color: app.theme['button_color']
                background_normal: app.theme['button_normal']
                text: '–í—Å–µ —á—É–¥–æ–≤–æ!'
                values: root.answers
                font_name: "seguiemj"
                textInput: messageInput
            EmojiSpinner:
                size_hint_x: 0.1
                color: app.theme['text_color']
                background_color: app.theme['button_color']
                background_normal: app.theme['button_normal']
                text: 'üòÄ'
                values: ['üòÄ', 'üòÅ', 'ü§£', '‚òπÔ∏è', 'üò¢', 'üò≠']
                font_name: "seguiemj"
                textInput: messageInput
            Button:
                size_hint_x: 0.2
                color: app.theme['text_color']
                background_color: app.theme['button_color']
                background_normal: app.theme['button_normal']
                text: 'Change theme'
                on_press: app.changeTheme()
                
        BoxLayout:
            orientation: 'horizontal'
            padding: (5, 5)
            spacing: 10
            TextInput:
                id: findInput
                multiline: False
                font_name: "seguiemj"
            Label:
                color: app.theme['text_color']
                text: 'Match case:'
            CheckBox:
                id: matchCaseCheckBox
                color: app.theme['text_color']
            Button:
                color: app.theme['text_color']
                background_color: app.theme['button_color']
                background_normal: app.theme['button_normal']
                text: 'Find All'
                on_release: root.findAll()

