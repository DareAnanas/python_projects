            cursor_color: app.theme['text_color']
            background_normal: ''
            canvas.before:
                Color:
                    rgba: app.theme['stroke_color']
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
        ThemedButton:
